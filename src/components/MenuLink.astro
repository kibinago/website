---
/**
 * Wrapper component of the Link component for SideMenu
 */

import type { HTMLAttributes } from "astro/types";
import Link from "../components/common/Link.astro";
import { removeLangFromContentPath } from "../utils/urlUtils";
import s from "../styles/components/MenuLink.module.css";

type Props = HTMLAttributes<"a">;

const { href, ...props } = Astro.props;

const { pathname } = Astro.url;
const subpath = pathname.match(/[^\/]+/g);
const isActive =
  href === removeLangFromContentPath(pathname) || href === "/" + subpath?.[0];
---

<Link {href} class:list={[s.link, { [s.active]: isActive }]} {...props}>
  <slot></slot>
</Link>
