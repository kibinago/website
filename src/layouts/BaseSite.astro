---
import s from "../styles/page/index.module.css";

import type { BaseHeadProps } from "../components/BaseHead.astro";
import BaseHead from "../components/BaseHead.astro";
import Footer from "../components/Footer.astro";
import MenuBar from "../components/Header.astro";

type Props = BaseHeadProps;

const baseHeadProps = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <BaseHead {...baseHeadProps} />
  </head>
  <body>
    <div id="body-wrap" class={s.bodyWrap}>
      <MenuBar />
      <main>
        <slot></slot>
        <Footer />
      </main>
    </div>
    <script>
      const saved = localStorage.getItem("theme");
      if (saved) {
        document.body.setAttribute("data-theme", saved);
      } else if (
        window.matchMedia &&
        window.matchMedia("(prefers-color-scheme: dark)").matches
      ) {
        document.body.setAttribute("data-theme", "dark");
      }
    </script>
  </body>
</html>
